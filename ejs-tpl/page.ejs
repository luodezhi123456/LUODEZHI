<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <script src="./js/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="./bootstrap-3.3.7-dist/css/bootstrap.min.css">
    <script src="./bootstrap-3.3.7-dist/js/bootstrap.js"></script>
    <style>
        .div1 {
            position: absolute;
            top: 0px;
            right: 0px;
        }
        
        .div2 {
            position: relative;
        }
        .reply-input{
            display: none;
        }
        .active{
            display: block;
        }
    </style>
</head>

<body>

    <div class="container">
        <h3> <a href="/blog">首页</a> </h3>
        <div class="page-header">
            <h1>
                <%= data.title %>
                <small>
                    <%= data.intro %></small>
            </h1>
        </div>
        <p>
            分类：
            <span class="label label-primary">
                <%= data.sort %></span>
        </p>
        <p>
            作者：
            <%= data.author %>
        </p>
        <p>
            日期：
            <%= data.date %>
        </p>
        <div class="well">
            <%= data.content %>
        </div>
        <div class="alert alert-warning" role="alert">点赞先刷新此页面</div>
        <div class="page-header">
            <h3>评论
            </h3>
        </div>
        <% comment.forEach(function(e){ %>
        <div class="panel panel-default">
            <div class="panel-body">
                <%= e.author %> 评论
                <%= e.fauthor%>
            </div>
            <div class="panel-footer div2">
                <strong>
                    <%= e.content %></strong>
                <div>
                    <%= e.date %>
                </div>

                <div class="div1">
                    <span>
                    <%=e.fabulous%></span>
                    <a href="/blog/comment/chulizan?_id=<%=e._id%>">
                        <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                    </a>
                    <div class="btn btn-default btn-reply" role="button">回复</div>
                </div>
            </div>
        </div>
        <div class="reply-input">
            <div class="page-header">
                <h3>我评论
                    <%=e.author%>
                </h3>
            </div>
            <form method="POST" action="/blog/comment/submitReplyComment?fid=<%=e._id%>&f_author=<%= e.author%>&ffid=<%=data._id%>">
                <div class="form-group">
                    <label for="exampleInputEmail1">你的邮箱</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" name="email" placeholder="邮箱">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="3" name="content"></textarea>
                </div>
                <button type="submit" class="btn btn-default">提交</button>
            </form>
        </div>
        <% }) %>
        <div class="page-header">
            <h3>我也想发表评论
            </h3>
        </div>
        <form method="POST" action="/blog/comment/submitComment?_id=<%=data._id%>&author=<%=data.author%>">
            <div class="form-group">
                <label for="exampleInputEmail1">你的邮箱</label>
                <input type="email" class="form-control" id="exampleInputEmail1" name="email" placeholder="邮箱">
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="3" name="content"></textarea>
            </div>
            <button type="submit" class="btn btn-default">提交</button>
        </form>
        
    </div>

 
    <script>
        var div1 = $('.btn-reply')
        div1.on('click', function () {
            console.log($(this).parent().parent().parent().next().addClass('active'))
        })
    </script>
    <script src="http://pv.sohu.com/cityjson?ie=utf-8"></script>
    <script>
    var PostIp = function(){
        $.ajax({
            type : 'get',
            url : '/blog/comment/getIp',
            data : {
                Ip  : returnCitySN["cip"]
            },
            success : function(e){
                console.log(e)
            }
        })
    }
    PostIp()
    </script>
</body>

</html>